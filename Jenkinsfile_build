pipeline {

    agent { label "master" }
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
        timestamps()
        ansiColor('xtrem')
    }

    environment {
        DOCKER_REGISTRY = "vlemi"
        TAG = "latest"
    }

    stages {

        stage('Prepare') {
            steps {
                script{
                    IMAGE_NAME = "${DOCKER_REGISTRY}/todo-app:${TAG}"
                }               
            }
        }

        stage('Build image') {
            steps {

                sh "docker build -t ${IMAGE_NAME}"

            }
        }

        stage('Push image') {
            steps {

                sh "docker push ${IMAGE_NAME}"

            }
        }
       
        
    }
}